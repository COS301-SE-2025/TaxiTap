{
  "name": "taxi-tap",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "app"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:app",
    "install:app": "cd app && npm install",
    "dev": "concurrently \"npm run dev:convex\" \"npm run dev:app\"",
    "dev:app": "cd app && npm start",
    "dev:convex": "cd convex && npx convex dev",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest tests/unit/backend",
    "test:frontend": "jest tests/unit/frontend",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:app && npm run build:convex",
    "build:app": "cd app && npm run build",
    "build:convex": "cd convex && npx convex deploy"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.0.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^24.0.10",
    "concurrently": "^8.2.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}
